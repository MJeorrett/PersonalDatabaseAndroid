<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/fragment_home_edit_structure_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/fragment_home_edit_structure_button_text"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:id="@+id/fragment_home_edit_data_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/fragment_home_edit_data_button_text"
        android:textSize="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</LinearLayout>